<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_website_icon"
        android:src="@mipmap/ic_launcher"
        style="@style/image_cipher_icon" />
    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
                style="@style/text_upass_title"
                android:text="标题：" />

        <EditText
                android:id="@+id/et_title"
                style="@style/edit_cipher_content"
                android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="描述：" />

        <EditText
            android:id="@+id/et_desc"
            style="@style/edit_cipher_content"
            android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="账号：" />

        <EditText
            android:id="@+id/et_username"
            style="@style/edit_cipher_content"
            android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="密码：" />

        <EditText
            android:id="@+id/et_password"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:inputType="textPassword"
            style="@style/edit_cipher_content"
            android:text="aaaaaaaaaaaaaa" />

        <CheckBox
            android:id="@+id/cb_password_visible"
            android:layout_width="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_padding"
            android:button="@drawable/selector_password_visible"
            android:paddingTop="@dimen/common_padding"
            android:paddingBottom="@dimen/common_padding"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="URL：" />

        <EditText
            android:id="@+id/et_url"
            style="@style/edit_cipher_content"
            android:text="www.iOnesmile.com" />

    </LinearLayout>
    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="备注：" />

        <EditText
            android:id="@+id/et_remark"
            style="@style/edit_cipher_content"
            android:maxLines="5"
            android:gravity="left|top"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

    </LinearLayout>

</LinearLayout>
