<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_website_icon"
        style="@style/image_cipher_icon"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
                style="@style/text_upass_title"
                android:text="标题：" />

        <TextView
                android:id="@+id/tv_title"
                style="@style/text_upass_content"
                android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="描述：" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_upass_content"
            android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="账号：" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/text_upass_content"
            android:text="iOnesmile" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="密码：" />

        <TextView
            android:id="@+id/tv_password"
            style="@style/text_upass_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:text="******" />

        <CheckBox
            android:id="@+id/cb_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:background="@null"
            android:button="@drawable/selector_password_visible"
            android:gravity="center"
            android:paddingTop="@dimen/common_padding"
            android:paddingBottom="@dimen/common_padding" />

    </LinearLayout>

    <LinearLayout style="@style/layout_linear_upass_show">

        <TextView
            style="@style/text_upass_title"
            android:text="URL：" />

        <TextView
            android:id="@+id/tv_url"
            style="@style/text_upass_content"
            android:text="www.iOnesmile.com" />

    </LinearLayout>
    <LinearLayout
        style="@style/layout_linear_upass_show"
        android:gravity="top">

        <TextView
            style="@style/text_upass_title"
            android:layout_marginTop="@dimen/common_padding"
            android:text="备注：" />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/text_upass_content"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:text="11111111111111111111111111111111111111111111111111111111111111111111111111111111111" />

    </LinearLayout>

</LinearLayout>
